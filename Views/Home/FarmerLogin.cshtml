@model WebApplication4.Models.FarmerLogin

@{
	ViewBag.Title = "FarmerLogin";
	
}
<html>
<h2>FarmerLogin</h2>
<head>
	<style>
		.split {
			height: 100%;
			width: 50%;
			position: fixed;
			z-index: 1;
			top: 0;
			overflow-x: hidden;
			padding-top: 20px;
		}

		/* Control the left side */
		.left {
			left: 0;
			background-color: black;
		}

		/* Control the right side */
		.right {
			right: 0;
			background-color: black;
		}

		/* If you want the content centered horizontally and vertically */
		.centered {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			text-align: center;
		}

		body {
			color: white;
		}
	</style>
</head>
<body>

	<div class="split left">
		<h2 style="position:relative;top:60px;">Login Into Your Account</h2>

		<div style="position:relative;top:80px;">

			@using (Html.BeginForm("FarmerLogin", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				<hr />
				@Html.ValidationSummary("", new { @class = "text-danger" })


				<div class="form-group">
					@Html.LabelFor(m => m.FarmersLoginEmail, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.TextBoxFor(m => m.FarmersLoginEmail, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.FarmersLoginEmail, "", new { @class = "text-danger" })

					</div>
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.FarmersLoginPassword, new { @class = "col-md-2 control-label" })
					<div class="col-md-10">
						@Html.PasswordFor(m => m.FarmersLoginPassword, new { @class = "form-control" })
						@Html.ValidationMessageFor(m => m.FarmersLoginPassword, "", new { @class = "text-danger" })

					</div>
				</div>



				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<input type="submit" class="btn btn-default" value="Login" />
					</div>
				</div>
			}
			@Html.ActionLink("First time Sign Up here", "FarmerSignUp")

		</div>

	</div>
	<div class="split right">
		<div class="centered">
			<img src="~/Content/pictures/gabriel-jimenez-jin4W1HqgL4-unsplash.jpg" style="height:1000px; width:650px;" alt="Avatar man">

		</div>
	</div>
</body>

</html>